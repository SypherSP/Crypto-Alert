<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<BorderPane fx:controller="com.example.crypto.CoinController" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0"
             prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox alignment="CENTER" prefHeight="48.0" prefWidth="600.0" BorderPane.alignment="TOP_LEFT">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="38.0" prefWidth="262.0" text="Crypto-Alert">
                    <font>
                        <Font name="Bodoni MT" size="30.0" />
                    </font>
                    <HBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                        <TableColumn fx:id="name" prefWidth="75.0" text="Coin" />
                        <TableColumn fx:id="price" prefWidth="75.0" text="Price" />
                        <TableColumn fx:id="upper" prefWidth="75.0" text="Upper" />
                        <TableColumn fx:id="lower" prefWidth="75.0" text="Lower" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <VBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </VBox.margin>
                </TableView>
                <Button fx:id="Rbutton" onAction="#deleteRowFromTable" mnemonicParsing="false" text="Remove Selected Coin">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </center>
</BorderPane>
